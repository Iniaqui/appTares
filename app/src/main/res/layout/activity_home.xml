                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/contact_image3"
                    android:src="@drawable/girl"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null" />


                <LinearLayout
                    android:id="@+id/contact_infos3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contact_name3"
                        android:text="@string/michelle_bella"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:fontFamily="@font/sf_pro_display_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contact_desc3"
                        android:text="@string/software_engineer"
                        android:textSize="12sp"
                        android:fontFamily="@font/sf_pro_display_regular" />

                </LinearLayout>

                <TextView
                    android:id="@+id/trasact_mount3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_3_289"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginLeft="110dp"
                    android:fontFamily="@font/sf_pro_display_semibold" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/image5View"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null" />

</RelativeLayout>