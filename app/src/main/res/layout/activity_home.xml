                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null" />


                <LinearLayout
                    android:id="@+id/contact_infos2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contact_name2"
                        android:text="@string/amazon_pay"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:fontFamily="@font/sf_pro_display_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contact_desc2"
                        android:text="@string/amazon_control_manager"
                        android:textSize="12sp"
                        android:fontFamily="@font/sf_pro_display_regular" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trasact_mount2"
                    android:text="@string/_6_275"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="70dp"
                    android:fontFamily="@font/sf_pro_display_semibold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/recent_transact3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
