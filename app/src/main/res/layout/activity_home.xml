                        android:src="@drawable/nsia_logo"
                        android:contentDescription="@null" />

                </LinearLayout>

                <TextView
                    android:id="@+id/somme4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_8_500"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/sf_pro_display_regular" />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/envoyer"
            android:layout_width="135dp"
            android:layout_height="70dp"
            android:text="@string/envoyer"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/sky_blue"
            android:fontFamily="@font/sf_pro_display_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/rec"
            android:orientation="vertical"
            android:padding="10dp" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/line"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:contentDescription="@null"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transactions_r_centes"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/sf_pro_display_semibold" />


            <LinearLayout
                android:id="@+id/recent_transact1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" >

