                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/rec"
                android:orientation="vertical"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/home_icon"
                        android:scaleType="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/green"
                        android:contentDescription="@null" />

                    <ImageView
                        android:id="@+id/bank_image1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ecobank_logo"
                        android:contentDescription="@null" />

                </LinearLayout>

                <TextView
                    android:id="@+id/somme1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_8_500"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/sf_pro_display_regular" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/soldes_infos2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/rec"
                android:orientation="vertical"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/home_icon"
                        android:scaleType="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/green"
                        android:contentDescription="@null" />

                    <ImageView
                        android:id="@+id/bank_image2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/uba_logo"
                        android:contentDescription="@null" />

                </LinearLayout>

                <TextView
                    android:id="@+id/somme2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_8_500"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/sf_pro_display_regular" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/soldes_infos3"
                android:layout_width="75dp"
                android:layout_height="75dp"
